{% extends 'admin.html.twig' %}

{% block title %}Modifier une page{% endblock %}

{% block body %}
    <section class="block">
        <h2>Modifier une page</h2>
        {{ form_start(form) }}
            <p>{{ form_label(form.page_name) }}<br />
            {{ form_widget(form.page_name) }}</p>
            <p>{{ form_label(form.page_url) }}<br />
            {{ form_widget(form.page_url) }}</p>

            <p>{{ form_label(form.page_model) }}<br />
            {{ form_widget(form.page_model, {
                'value': pageModel
            }) }}</p>

            <p>{{ form_label(form.page_content) }}<br />
            {{ form_widget(form.page_content, {
                'value': pageContent
            }) }}</p>

            <p>{{ form_label(form.page_meta_title) }}<br />
            {{ form_widget(form.page_meta_title) }}</p>
            <p>{{ form_label(form.page_meta_desc) }}<br />
            {{ form_widget(form.page_meta_desc) }}</p>
            {{ form_row(form.page_submit) }}
        {{ form_end(form) }}
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        CKEDITOR.instances["posts_form_post_content"].destroy();
        CKEDITOR.replace( 'posts_form_post_content', {
        	startupMode: 'source'
        });
    </script>
{% endblock %}