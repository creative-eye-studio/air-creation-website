{% extends 'admin.html.twig' %}

{% block title %}Ajouter un produit{% endblock %}

{% block body %}
    <section class="block tab-container">
        <h2>Ajouter un nouveau produit</h2>
        <ul class="tabs-btn tabs">
            <li><a class="tab active">Résumé</a></li>
            <li><a class="tab">Critères de recherche</a></li>
            <li><a class="tab">Images</a></li>
            <li><a class="tab">Description</a></li>
            <li><a class="tab">Caractéristiques</a></li>
            <li><a class="tab">SEO</a></li>
        </ul>
        {{ form_start(form, { 'attr' : {'class': 'tab-panes'} }) }}
            <!-- Résumé -->
            <div class="tab-pane active">
                <p>
                    {{ form_label(form.product_name) }}<br />
                    {{ form_widget(form.product_name) }}
                </p>
                <p>
                    {{ form_label(form.product_thumb) }}<br />
                    {{ form_widget(form.product_thumb) }}
                </p>
                <p>
                    {{ form_label(form.product_intro) }}<br />
                    {{ form_widget(form.product_intro) }}
                </p>
            </div>

            <!-- Critères de recherche -->
            <div class="tab-pane">
                <p>
                    {{ form_label(form.product_capacity) }}<br />
                    {{ form_widget(form.product_capacity) }}
                </p>
                <p>
                    {{ form_label(form.product_wing) }}<br />
                    {{ form_widget(form.product_wing) }}
                </p>
                <p>
                    {{ form_label(form.product_tricycle) }}<br />
                    {{ form_widget(form.product_tricycle) }}
                </p>
            </div>

            <!-- Images-->
            <div class="tab-pane">
                <p>
                    {{ form_label(form.product_color_imgs) }}<br />
                    {{ form_widget(form.product_color_imgs) }}
                </p>
                <p>
                    {{ form_label(form.product_access_imgs) }}<br />
                    {{ form_widget(form.product_access_imgs) }}
                </p>
                <p>
                    {{ form_label(form.product_gallery_imgs) }}<br />
                    {{ form_widget(form.product_gallery_imgs) }}
                </p>
            </div>

            <!-- Description -->
            <div class="tab-pane">
                <p>
                    {{ form_label(form.product_desc) }}<br />
                    {{ form_widget(form.product_desc) }}
                </p>
            </div>

            <!-- Caractéristiques -->
            <div class="tab-pane">
                <p>
                    {{ form_label(form.product_carac) }}<br />
                    {{ form_widget(form.product_carac) }}
                </p>
            </div>

            <!-- SEO -->
            <div class="tab-pane">
                <p>
                    {{ form_label(form.product_meta_title) }}<br />
                    {{ form_widget(form.product_meta_title) }}
                </p>
                <p>
                    {{ form_label(form.product_meta_desc) }}<br />
                    {{ form_widget(form.product_meta_desc) }}
                </p>
            </div>
            <p>{{ form_widget(form.product_submit) }}</p>
        {{ form_end(form) }}
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        CKEDITOR.instances["product_product_intro"].destroy();
        CKEDITOR.replace( 'product_product_intro', {
        	startupMode: 'wysiwyg'
        });
        CKEDITOR.instances["product_product_desc"].destroy();
        CKEDITOR.replace( 'product_product_desc', {
        	startupMode: 'wysiwyg'
        });
    </script>
{% endblock %}