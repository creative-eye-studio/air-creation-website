{% extends 'base.html.twig' %}

{% block title %}{{ meta_title_en }} - Air Cr√©ation{% endblock %}
{% block meta_description %}{{ meta_desc_en }}{% endblock %}

{% block body_class %}{{ headerType }}{% endblock %}

{% block body %}

    {% include "webpages/blocks/en/header.html.twig" %}
    <main id="swup">
        <figure class="post-image">
            <img src="../../uploads/images/posts/{{ post_image }}" alt="{{ post_title }}" />
        </figure>
        <div class="post-title">
            <h1>{{ post_meta_title_en }}</h1>
            <p class="date">Posted on {{ post_date|format_date('full', locale='en') }}</p>
            <span class="scroll-down-post">
                <i class="fa-solid fa-arrow-down fa-2x"></i>
            </span>
        </div>
        <div id="post-content">
            {% include "webpages/posts/en/#{post_id}.html.twig" %}
        </div>
    </main>
    {% include "webpages/blocks/en/footer.html.twig" %}

{% endblock %}
