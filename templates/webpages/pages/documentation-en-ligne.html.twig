<!-- Cover Page -->
<section class="cover-page">
  <div class="text">
    <h1>Documentation</h1>
  </div>
  <div class="image">
    <img src="../uploads/images/pages/documentation/bg-page.jpg" alt="" />
  </div>
</section>

<!-- Fonctions filtrage -->
<div class="filters doc-form">
  {{ form_start(docFilterForm) }}
  <div class="input-block">
    {{ form_row(docFilterForm.filter_wing) }}
  </div>
  <div class="input-block">
    {{ form_row(docFilterForm.filter_tricycle) }}
  </div>
  <div class="input-btn">
    {{ form_row(docFilterForm.submit) }}
  </div>
  {{ form_end(docFilterForm) }}
</div>

<section class="doc-container">
  <h2 class="center">
    Toute la documentation de nos produits
  </h2>
  <div class="products-docs-list">
    {% for docCategory in docCategories %}
      {% if docCategory.oldproduct == 0 %}
        <div class="cat-block">
          <h3>{{ docCategory.name }}</h3>
          <ul>
            {% for document in docCategory.docfiles %}
            <li><a href="../uploads/documentation/{{ document.docname }}" download>{{ document.docname }}</a></li>
            {% endfor %}
          </ul>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>

<hr />

<section class="doc-container">
  <h2 class="center">
    Produits anciens
  </h2>
  <div class="old-products-list">
    {% for docCategory in docCategories %}
      {% if docCategory.oldproduct %}
        <div>
          <h3>{{ docCategory.name }}</h3>
          <ul>
            {% for document in docCategory.docfiles %}
            <li><a href="../uploads/documentation/{{ document.docname }}" download>{{ document.docname }}</a></li>
            {% endfor %}
          </ul>
        </div>
      {% endif %}
    {% endfor %}
  </div>

</section>