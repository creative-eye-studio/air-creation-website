<!-- Contact Form -->
<section class="contact-block">
  <div class="image"></div>
  <div class="form tab-container">
    <h1>Faites nous part de votre demande</h1>
    <ul class="tabs tabs-btn">
      <li><a class="tab active">Étape 1</a></li>
      <li><a class="tab">Étape 2</a></li>
      <li><a class="tab">Étape 3</a></li>
    </ul>
    {{ form_start(contactForm, { 'attr' : {'class': 'tab-panes'} }) }}
    <div class="contact-tab tab-pane active">
      <p><strong>1. Votre identité et informations de contact</strong></p>
      <div class="horizontal-radio">
        {% for child in contactForm.gender %}
      <p>
        {{ form_widget(child) }}
        {{ form_label(child, null) }}
      </p>
      {% endfor %}
      </div>
      
      <p>
        {{ form_label(contactForm.lname)}}
        {{ form_widget(contactForm.lname)}}
      </p>
      <p>
        {{ form_label(contactForm.fname)}}
        {{ form_widget(contactForm.fname)}}
      </p>
      <p>
        {{ form_label(contactForm.phone)}}
        {{ form_widget(contactForm.phone)}}
      </p>
      <p>
        {{ form_label(contactForm.email)}}
        {{ form_widget(contactForm.email)}}
      </p>
    </div>
    <div class="contact-tab tab-pane">
      <p><strong>2. Vous êtes...</strong></p>
      {% for child in contactForm.customer_type %}
      <p>
        {{ form_widget(child) }}
        {{ form_label(child, null) }}
      </p>
      {% endfor %}
    </div>
    <div class="contact-tab tab-pane">
      <p><strong>3. Comment pouvons nous vous aider <span class="gender"></span> <span class="lname"></span> ?</strong></p>
      <p>
        {{ form_label(contactForm.subject)}}
        {{ form_widget(contactForm.subject)}}
      </p>
      <p>
        {{ form_label(contactForm.message)}}
        {{ form_widget(contactForm.message)}}
      </p>
      {{ form_widget(contactForm.submit_button)}}
    </div>
    {{ form_end(contactForm) }}
  </div>
</section>