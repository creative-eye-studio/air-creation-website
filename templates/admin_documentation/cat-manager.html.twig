{% extends 'admin.html.twig' %}

{% block title %}Modifier la catégorie{% endblock %}

{% block body %}
    <section class="block">
        <a class="btn-link float-right" href="{{ path('app_admin_documentation') }}">Retour à la liste des catégories</a>
        <h2>Modifier la catégorie</h2>
        {{ form_start(docForm) }}
            <p>{{ form_label(docForm.product_name)}}<br/>
            {{ form_widget(docForm.product_name)}}</p>
            <p>{{ form_label(docForm.product_type)}}<br/>
            {{ form_widget(docForm.product_type)}}</p>
            <p>{{ form_label(docForm.submit)}}</p>
        {{ form_end(docForm) }}
    </section>
{% endblock %}