{% extends 'admin.html.twig' %}

{% block title %}Modifier un article{% endblock %}

{% block body %}
    <section class="block tab-container">
        <h2>Modifier un article</h2>
        <ul class="tabs tabs-btn">
            <li><a class="tab active">Contenu de page</a></li>
            <li><a class="tab">SEO de la page</a></li>
        </ul>
        {{ form_start(form, { 'attr' : { 'class': 'tab-panes' } }) }}
            <div id="content-page" class="tab-pane active">
                <p>{{ form_label(form.post_name) }}<br />
                {{ form_widget(form.post_name) }}</p>

                <p>{{ form_label(form.post_url) }}<br />
                {{ form_widget(form.post_url) }}</p>

                <p>{{ form_label(form.post_content) }}<br />
                {{ form_widget(form.post_content, {
                    'value': content
                }) }}</p>
            </div>
            <div id="seo-page" class="tab-pane">
                <p>{{ form_label(form.post_meta_title) }}<br />
                {{ form_widget(form.post_meta_title) }}</p>

                <p>{{ form_label(form.post_meta_desc) }}<br />
                {{ form_widget(form.post_meta_desc) }}</p>
            </div>
            {{ form_row(form.submit) }}
        {{ form_end(form) }}
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        CKEDITOR.instances["posts_form_post_content"].destroy();
        CKEDITOR.replace( 'posts_form_post_content', {
        	startupMode: 'wysiwyg'
        });
    </script>
{% endblock %}
