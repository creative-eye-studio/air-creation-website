{% extends 'admin.html.twig' %}

{% block title %}Liste des partenaires{% endblock %}

{% block body %}
    <section class="block tab-container">
        <a class="btn-link float-right" href="{{ path('app_admin_partners_add') }}">Ajouter un partenaire</a>
        <h2>Liste des partenaires</h2>
        <ul class="tabs tabs-btn">
            <li><a class="tab active">Revendeurs</a></li>
            <li><a class="tab">Formateurs</a></li>
        </ul>
        <div class="tab-panes">
            <div class="tab-pane active">
            {% if partnersRepoRevendeurs|length > 0 %}
                {% for revendeur in partnersRepoRevendeurs %}
                    <div class="line">
                        <p>{{ revendeur.name }}</p>
                        <ul>
                            <li><a href="" target="_blank" rel="noopener">Voir</a></li>
                            <li><a href="{{ path('app_admin_partners_update', {partner_id: revendeur.id}) }}">Modifier</a></li>
                            <li><a href="{{ path('app_admin_partners_delete', {partner_id: revendeur.id}) }}">Supprimer</a></li>
                        </ul>
                    </div>
                {% endfor %}
            {% else %}
                <p>Il n'y a pas de revendeurs dans la liste</p>
            {% endif %}
            </div>
            <div class="tab-pane">
            {% if partnersRepoFormateurs|length > 0 %}
                {% for formateur in partnersRepoFormateurs %}
                    <div class="line">
                        <p>{{ formateur.name }}</p>
                        <ul>
                            <li><a href="" target="_blank" rel="noopener">Voir</a></li>
                            <li><a href="">Modifier</a></li>
                            <li><a href="{{ path('app_admin_partners_delete', {partner_id: formateur.id}) }}">Supprimer</a></li>
                        </ul>
                    </div>
                {% endfor %}
            {% else %}
                <p>Il n'y a pas de formateurs dans la liste</p>
            {% endif %}
            </div>
        </div>
    </section>
{% endblock %}
